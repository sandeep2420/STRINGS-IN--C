// 1. Write a program to print the vowel characters from the given string. (Apple).



#include<stdio.h>
int main(int argc, char *argv[])
{
    char name[100];
    printf("Enter the name:\n");
    scanf("%s", name);
    for(int i=0; i<=sizeof(name)/sizeof(name[0]); i++)
    {
        char ch = name[i];
        if(ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' || ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U')
        {
            printf("%c", ch);
        }
    }
    return 0;
}
